<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Supermarket App</title>

  <style>
    body {
      background: #f8fff4;
      font-family: "Poppins", Arial, sans-serif;
    }
    h2, h3, h4, h5, h6 { font-weight: 600; }

    /* Floating toast popup */
    .toast-popup {
      position: fixed;
      top: 20px;
      right: 20px;
      z-index: 9999;
      padding: 15px 20px;
      border-radius: 10px;
      color: #fff;
      background: #28a745;
      font-weight: 600;
      box-shadow: 0 3px 10px rgba(0,0,0,0.2);
      opacity: 0;
      transform: translateX(120%);
      transition: all 0.4s ease;
    }
    .toast-popup.show {
      opacity: 1;
      transform: translateX(0);
    }
    .toast-popup.error {
      background: #dc3545;
    }

    /* highlight match */
    .highlight {
      background: yellow;
      font-weight: bold;
      padding: 0 2px;
    }

    .hero {
      background: url('/images/userbackground.png') center/cover no-repeat;
      padding: 120px 50px;
      border-radius: 15px;
      margin-bottom: 40px;
      color: #0a4205;
      position: relative;
    }

    /* REMOVE THIS ENTIRE THING
    .hero img.fruits {
      position: absolute;
      bottom: 0;
      right: 20px;
      width: 220px;
      opacity: 0.9;
    }
    */

    .category-bar {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-bottom: 30px;
      flex-wrap: wrap;
    }

    .category-btn {
      padding: 12px 20px;
      background: white;
      border-radius: 30px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
      border: 1px solid #ddd;
      cursor: pointer;
      font-weight: 500;
      transition: 0.2s;
    }

    .category-btn:hover {
      background: #d7ffd8;
      transform: translateY(-3px);
    }

    .category-btn.active {
      background: #198754;
      color: #fff;
      border-color: #198754;
    }

    .product-card {
      border-radius: 16px;
      background: white;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      transition: 0.2s ease;
    }

    .product-card:hover { transform: scale(1.03); }

    .product-img {
      height: 160px;
      object-fit: contain;
      width: 100%;
      background: #f1f7ef;
      padding: 10px;
    }

    .out-overlay {
      position: absolute;
      top: 12px;
      left: 12px;
      padding: 6px 12px;
      background: #ff4b4b;
      color: white;
      font-size: 0.8rem;
      font-weight: bold;
      border-radius: 6px;
    }

    .out-disabled {
      opacity: 0.5;
      pointer-events: none;
    }

    /* ADDED â€” no items message */
    #noResults {
      display: none;
      text-align: center;
      font-size: 18px;
      font-weight: 600;
      color: #dc3545;
      margin-top: 25px;
    }

  </style>
</head>

<body>

  <%- include('partials/usernavbar') %>

  <% if (typeof success !== "undefined" && success) { %>
    <div id="loginToast" class="toast-popup"><%= success %></div>
  <% } %>

  <div id="stockToast" class="toast-popup error">You cannot add more than available stock!</div>

  <div class="container mt-4">

    <div class="hero text-center">
      <h1>Fresh Organic Products</h1>
      <p>Natural, healthy groceries delivered to your home.</p>

      <!-- ðŸ”¥ REMOVED broken image -->
      <!-- <img src="/images/fruits_banner.png" class="fruits"> -->
    </div>

    <p class="d-flex align-items-center"><i class="bi bi-person-circle" style="font-size:1.2rem; margin-right:8px;"></i> Welcome, <%= user.username %> (<%= user.role %>)</p>

    <% if (added) { %>
      <div class="alert alert-success text-center">
        You added <strong><%= name %></strong> to your cart!
        (<a href="/cart" class="alert-link">View Cart</a>)
      </div>
    <% } %>

    <div class="mb-4 text-center">
      <input
        type="text"
        id="productSearch"
        class="form-control w-50 mx-auto"
        placeholder="Search products..."
        style="padding: 12px; font-size: 16px; border-radius: 30px;"
      >
    </div>

    <div class="category-bar">
      <button class="category-btn active" data-category="all">All Products</button>

      <% if (categories && categories.length > 0) { %>
        <% categories.forEach(c => { %>
          <button class="category-btn" data-category="<%= c.id %>">
            <%= c.name %>
          </button>
        <% }) %>
      <% } %>
    </div>

    <h2 class="text-center mb-4">Featured Products</h2>

    <div id="noResults">No products found.</div>

    <div class="row g-4" id="productList">

      <% products.forEach(p => { %>

        <div class="col-12 col-sm-6 col-md-4 col-lg-3 product-item"
             data-category="<%= p.categoryId %>">

          <div class="card product-card position-relative <%= p.quantity === 0 ? 'out-disabled' : '' %>">

            <% if (p.quantity === 0) { %>
              <div class="out-overlay">OUT OF STOCK</div>
            <% } %>

            <img src="/images/<%= p.image %>" class="product-img">

            <div class="card-body text-center">
              <h6 class="fw-bold mb-1 product-name">
                <a href="/product/<%= p.id %>" class="text-success text-decoration-none">
                  <%= p.productName %>
                </a>
              </h6>

              <p><strong>Stock:</strong> <%= p.quantity %></p>
              <p><strong>Price:</strong> $<%= p.price.toFixed(2) %></p>

              <% if (p.quantity > 0) { %>
                <form action="/add-to-cart/<%= p.id %>" method="POST">
                  <div class="input-group mb-3 justify-content-center">

                    <button class="btn btn-outline-success qty-btn"
                            data-id="<%= p.id %>" data-delta="-1" type="button">âˆ’</button>

                    <input type="text" id="qty-<%= p.id %>"
                           name="quantity" value="1"
                           class="form-control text-center"
                           style="width:60px;" readonly>

                    <button class="btn btn-outline-success qty-btn"
                            data-id="<%= p.id %>" data-delta="1"
                            data-max="<%= p.quantity %>"
                            type="button">+</button>
                  </div>

                  <button class="btn btn-success w-100">Add to Cart</button>
                </form>
              <% } else { %>
                <button class="btn btn-secondary w-100" disabled>Unavailable</button>
              <% } %>

            </div>
          </div>
        </div>

      <% }) %>
    </div>
  </div>

<script>
  /* LOGIN POPUP */
  const loginToast = document.getElementById("loginToast");
  if (loginToast) {
    setTimeout(() => loginToast.classList.add("show"), 300);
    setTimeout(() => loginToast.classList.remove("show"), 3500);
  }

  const stockToast = document.getElementById("stockToast");

  /* QUANTITY BUTTONS */
  document.addEventListener("click", e => {
    if (!e.target.classList.contains("qty-btn")) return;

    const id = e.target.dataset.id;
    const delta = parseInt(e.target.dataset.delta);
    const max = parseInt(e.target.dataset.max);
    const input = document.getElementById("qty-" + id);

    let qty = parseInt(input.value);
    qty += delta;

    if (qty < 1) qty = 1;

    if (!isNaN(max) && qty > max) {
      qty = max;
      stockToast.classList.add("show");
      setTimeout(() => stockToast.classList.remove("show"), 2500);
    }

    input.value = qty;
  });

  /* CATEGORY FILTER */
  document.querySelectorAll(".category-btn").forEach(btn => {
    btn.addEventListener("click", () => {
      const selected = btn.dataset.category;

      document.querySelectorAll(".category-btn")
        .forEach(b => b.classList.remove("active"));

      btn.classList.add("active");

      filterProducts();
    });
  });

  /* SEARCH + CATEGORY FILTER */
  document.getElementById("productSearch").addEventListener("input", filterProducts);

  function filterProducts() {
    const searchValue = document.getElementById("productSearch").value.trim().toLowerCase();
    const activeCategory = document.querySelector(".category-btn.active").dataset.category;

    let visibleCount = 0;

    document.querySelectorAll(".product-item").forEach(item => {
      const nameElement = item.querySelector(".product-name a");
      const nameText = nameElement.innerText;
      const nameLower = nameText.toLowerCase();

      const categoryMatch =
        activeCategory === "all" || item.dataset.category === activeCategory;

      const searchMatch =
        searchValue === "" || nameLower.includes(searchValue);

      const isVisible = categoryMatch && searchMatch;

      item.classList.toggle("d-none", !isVisible);

      /* HIGHLIGHT SEARCH MATCH */
      if (searchValue !== "" && searchMatch) {
        const regex = new RegExp(`(${searchValue})`, "ig");
        nameElement.innerHTML = nameText.replace(regex, "<span class='highlight'>$1</span>");
      } else {
        nameElement.innerHTML = nameText;
      }

      if (isVisible) visibleCount++;
    });

    document.getElementById("noResults").style.display =
      visibleCount === 0 ? "block" : "none";
  }
</script>

</body>
</html>
