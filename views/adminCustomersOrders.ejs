<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Customers' Orders</title>
</head>
<body>

  <%- include('partials/adminnavbar') %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h3>Customers' Orders</h3>
        <p class="text-muted mb-0">All orders placed by customers. Filter by customer name or order id.</p>
      </div>
      <div>
        <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
      </div>
    </div>

    <!-- Filters -->
    <div class="row g-2 mb-3">
      <div class="col-md-6">
        <select id="filterCustomer" class="form-select">
          <option value="">All customers</option>
          <% if (customers && customers.length) { %>
            <% customers.forEach(c => { %>
              <option value="<%= c.username %>"><%= c.username %></option>
            <% }) %>
          <% } %>
        </select>
      </div>
      <div class="col-md-6 text-end">
        <button id="clearFilters" class="btn btn-outline-secondary">Clear Filters</button>
      </div>
    </div>

    <!-- Orders list (card layout similar to orderHistory) -->
    <div id="ordersList">
      <% if (orders && orders.length > 0) { %>
        <% orders.forEach(o => { %>
          <div class="card mb-3 order-card" data-customer="<%= (o.username||'').toLowerCase() %>">
            <div class="card-header d-flex justify-content-between">
              <div>
                <strong><%= o.username %></strong>
                <div class="text-muted small"><%= new Date(o.createdAt).toLocaleString() %></div>
                <% if (o.address) { %>
                  <div class="text-muted small"><%= o.address %></div>
                <% } %>
              </div>
              <div class="text-end">
                <div><strong>Total: $<%= parseFloat(o.totalAmount || 0).toFixed(2) %></strong></div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <% let itemsArray = (o.items || '').split(', '); itemsArray.forEach(item => { %>
                  <div class="col-md-3 mb-2">
                    <div class="border p-2 h-100">
                      <div><%= item %></div>
                    </div>
                  </div>
                <% }) %>
              </div>
              <div class="text-end mt-2">
                <!-- Receipt link removed per request -->
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="alert alert-info">No orders found.</div>
      <% } %>
    </div>

    <script>
      const filterCustomer = document.getElementById('filterCustomer');
      const ordersList = document.getElementById('ordersList');

      function applyCustomerFilter() {
        const sel = filterCustomer.value.trim().toLowerCase();
        [...ordersList.querySelectorAll('.order-card')].forEach(card => {
          const customer = card.dataset.customer || ''; 
          card.style.display = (sel === '' || customer === sel.toLowerCase()) ? '' : 'none';
        });
      }

      filterCustomer.addEventListener('change', applyCustomerFilter);
      document.getElementById('clearFilters').addEventListener('click', () => {
        filterCustomer.value = '';
        applyCustomerFilter();
      });
    </script>
  </div>

</body>
</html>
