<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Admin Dashboard</title>
</head>
<body>

  <%- include('partials/adminnavbar') %>

  <div class="container mt-4">
      <div class="hero-admin rounded-3 p-4 mb-4 text-white">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h1 class="mb-1" style="text-shadow:0 2px 6px rgba(0,0,0,0.45);">Admin Dashboard</h1>
            <div class="small" style="opacity:0.95; text-shadow:0 1px 3px rgba(0,0,0,0.45);">Manage your store, view reports and perform quick actions.</div>
          </div>
          <div class="d-flex align-items-center">
            <i class="bi bi-person-circle" style="font-size:2.2rem; margin-right:10px; text-shadow:0 1px 3px rgba(0,0,0,0.45);"></i>
            <div class="text-end">
              <div class="fw-bold"><%= user ? user.username : 'Admin' %></div>
              <div class="small">Logged in as admin</div>
            </div>
          </div>
        </div>
      </div>

    <!-- LOGIN SUCCESS POPUP (same style as shopping.ejs) -->
    <% if (typeof messages !== 'undefined' && messages && messages.length > 0) { %>
      <div id="loginToast" class="toast-popup"><%= messages[0] %></div>
    <% } %>
    <div class="row gy-3">
      <!-- Summary cards -->
      <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card summary-card shadow-sm">
          <div class="card-body text-center">
            <div class="fs-5 fw-bold mb-0"><%= totalUsers || 0 %></div>
            <div class="text-muted small">Total Users</div>
          </div>
        </div>
      </div>

      <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card summary-card shadow-sm">
          <div class="card-body text-center">
            <div class="fs-5 fw-bold mb-0"><%= adminCount || 0 %></div>
            <div class="text-muted small">Admin Accounts</div>
          </div>
        </div>
      </div>

      <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card summary-card shadow-sm">
          <div class="card-body text-center">
            <div class="fs-5 fw-bold mb-0"><%= productCount || 0 %></div>
            <div class="text-muted small">Products</div>
          </div>
        </div>
      </div>

      <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card summary-card shadow-sm">
          <div class="card-body text-center">
            <div class="fs-5 fw-bold mb-0 text-danger"><%= lowStockCount || 0 %></div>
            <div class="text-muted small">Low Stock Items (&le;20)</div>
          </div>
        </div>
      </div>

      <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card summary-card shadow-sm">
          <div class="card-body text-center">
            <div class="fs-5 fw-bold mb-0"><%= totalOrders || 0 %></div>
            <div class="text-muted small">Total Orders</div>
          </div>
        </div>
      </div>

      <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card summary-card shadow-sm">
          <div class="card-body text-center">
            <div class="fs-5 fw-bold mb-0">$<%= Number(totalRevenue || 0).toFixed(2) %></div>
            <div class="text-muted small">Total Revenue</div>
          </div>
        </div>
      </div>

      <!-- Quick actions (full-width below summary on small screens) -->
      <div class="col-12 mt-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Quick Actions</h5>
            <div class="d-flex flex-wrap gap-2 quick-actions">
              <a href="/inventory" class="btn btn-primary btn-lg shadow-sm"><i class="bi bi-box-seam me-2"></i> Inventory</a>
              <a href="/addProduct" class="btn btn-success btn-lg shadow-sm"><i class="bi bi-plus-lg me-2"></i> Add Product</a>
              <a href="/admin/customers-orders" class="btn btn-info btn-lg shadow-sm"><i class="bi bi-receipt me-2"></i> Customer Orders</a>
              <a href="/admin/sales-reports" class="btn btn-secondary btn-lg shadow-sm"><i class="bi bi-bar-chart me-2"></i> Sales Reports</a>
              <a href="/admin/users" class="btn btn-warning btn-lg shadow-sm text-dark"><i class="bi bi-people me-2"></i> Manage Users</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent customer orders -->
    <div class="row mt-4">
      <div class="col-12">
        <div class="card summary-card shadow-sm">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h5 class="mb-0">Recent Customer Orders</h5>
              <a href="/admin/customers-orders" class="small">View all</a>
            </div>

            <% if (recentOrders && recentOrders.length > 0) { %>
              <div class="list-group">
                <% recentOrders.forEach(o => { %>
                  <div class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                      <div class="fw-semibold">Order #<%= o.orderId %> â€” <span class="text-muted small">by <%= o.username %></span></div>
                      <div class="small text-muted"><%= (o.items && o.items.length > 120) ? (o.items.substring(0,120) + '...') : o.items %></div>
                    </div>
                    <div class="text-end">
                      <div class="fw-bold">$<%= Number(o.totalAmount || 0).toFixed(2) %></div>
                      <div class="small text-muted"><%= new Date(o.createdAt).toLocaleString() %></div>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } else { %>
              <div class="text-muted">No recent orders to display.</div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

  </div>


</body>
</html>

  <style>
    :root{ --bg-1: #f7fbf9; --accent-1: #10b981; --accent-2: #059669; --muted: #6b7280; --card-bg: #ffffff; }

    /* Toast popup */
    .toast-popup { position: fixed; top: 20px; right: 20px; z-index:9999; padding:12px 16px; border-radius:10px; color:#fff; background:var(--accent-1); font-weight:700; box-shadow:0 6px 24px rgba(2,6,23,0.12); opacity:0; transform:translateX(120%); transition:all .36s ease; }
    .toast-popup.show { opacity:1; transform:translateX(0); }

    /* Hero */
    .hero-admin { background: linear-gradient(90deg, rgba(6,95,70,0.98), rgba(16,185,129,0.95)); border-radius:14px; padding:22px; box-shadow: 0 16px 48px rgba(6,95,70,0.10); }
    .hero-admin h1 { font-size:1.5rem; margin:0; }
    .hero-admin .small { opacity:0.95; }

    /* Summary cards */
    .summary-card { border-radius:12px; background:var(--card-bg); padding:8px 10px; }
    .summary-card .card-body { padding: .75rem; }
    .summary-card { box-shadow: 0 10px 30px rgba(2,6,23,0.06); transition: transform .18s ease, box-shadow .18s ease; }
    .summary-card:hover { transform: translateY(-6px); box-shadow: 0 28px 60px rgba(2,6,23,0.10); }

    .stat-icon { width:48px; height:48px; border-radius:10px; display:flex; align-items:center; justify-content:center; color:#fff; font-size:1.25rem; }
    .stat-users { background: linear-gradient(90deg,#6366f1,#7c3aed); }
    .stat-admins { background: linear-gradient(90deg,#0ea5a4,#059669); }
    .stat-products { background: linear-gradient(90deg,#06b6d4,#0891b2); }
    .stat-low { background: linear-gradient(90deg,#fb923c,#f97316); }
    .stat-orders { background: linear-gradient(90deg,#06b6d4,#0891b2); }
    .stat-revenue { background: linear-gradient(90deg,#f59e0b,#d97706); }

    /* Quick actions */
    .quick-actions { width:100%; }
    .quick-actions .btn { flex: 1 1 160px; min-width:140px; padding:.55rem .9rem; border-radius:10px; font-weight:600; transition: transform .16s ease, box-shadow .16s ease, filter .16s ease; }
    .quick-actions .btn i { margin-right:8px; }
    .quick-actions .btn:hover { transform: translateY(-6px); box-shadow: 0 18px 40px rgba(2,6,23,0.08); }

    /* Visual tiles */
    .card.tile { border-radius:14px; overflow:hidden; }
    .card.tile img { width:100%; height:180px; object-fit:cover; display:block; }
    .card.tile .card-body { background: linear-gradient(180deg, rgba(255,255,255,0.96), rgba(255,255,255,0.96)); }

    /* Layout polish */
    .container { max-width:1200px; }
    .small { color: rgba(255,255,255,0.9); }
  </style>

  <script>
    // Show login toast if present
    const loginToast = document.getElementById("loginToast");
    if (loginToast) {
      setTimeout(() => loginToast.classList.add("show"), 300);
      setTimeout(() => loginToast.classList.remove("show"), 3500);
    }
  </script>
