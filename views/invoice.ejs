<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Invoice - Supermarket App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f8faf8; font-family: Inter, system-ui, -apple-system, 'Segoe UI', Roboto, Arial; }
    .invoice-card { max-width: 980px; margin: 28px auto; background: #fff; border-radius: 8px; padding: 24px; box-shadow: 0 6px 22px rgba(12,30,50,0.06); }
    .invoice-header { border-bottom: 1px solid #eee; padding-bottom: 12px; margin-bottom: 18px; }
    .small-muted { color: #6c757d; }
    .table th, .table td { vertical-align: middle; }
    .print-btn { margin-left: 8px; }
    @media print { .no-print { display: none !important; } body { background: #fff; } }
  </style>
</head>
<body>

  <% /* If you want to include the site navbar here, uncomment and add the partial include in server-side code instead of nesting tags. */ %>

  <div class="invoice-card">
    <div class="d-flex justify-content-between align-items-start invoice-header">
      <div>
        <h4 class="mb-0">Invoice</h4>
        <div class="small-muted">Supermarket App</div>
      </div>

      <div class="text-end">
        <% if (order && order.date) { %>
          <div class="small-muted">Date: <%= (new Date(order.date)).toLocaleString() %></div>
        <% } else { %>
          <div class="small-muted">Date: <%= (new Date()).toLocaleString() %></div>
        <% } %>
        <% if (order && order.paymentMethod) { %>
          <div class="small-muted">Paid via: <%= order.paymentMethod %></div>
        <% } %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <h6 class="mb-1">Bill To</h6>
        <% if (user) { %>
          <div><strong><%= user.username || user.name || '' %></strong></div>
          <% if (user.address) { %>
            <div class="small-muted"><%= user.address %></div>
          <% } %>
          <% if (user.contact) { %>
            <div class="small-muted">Contact: <%= user.contact %></div>
          <% } %>
        <% } else if (order && order.customer) { %>
          <div><strong><%= order.customer.name %></strong></div>
          <div class="small-muted"><%= order.customer.address %></div>
        <% } else { %>
          <div class="small-muted">Guest customer</div>
        <% } %>
      </div>

      <div class="col-md-6 text-md-end">
        <h6 class="mb-1">Summary</h6>
        <% if (typeof order !== 'undefined' && order.items && order.items.length) { %>
          <div class="small-muted"><strong>Items</strong>: <%= order.items.length %></div>
        <% } %>
        <% if (typeof order !== 'undefined' && order.total) { %>
          <div class="small-muted"><strong>Total</strong>: $<%= Number(order.total).toFixed(2) %></div>
        <% } %>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-bordered">
        <thead class="table-light">
          <tr>
            <th style="width:6%">#</th>
            <th>Item</th>
            <th style="width:14%">Unit Price</th>
            <th style="width:12%">Quantity</th>
            <th style="width:14%">Line Total</th>
          </tr>
        </thead>
        <tbody>
          <% if (order && order.items && order.items.length) { %>
            <% order.items.forEach(function(it, idx) { %>
              <tr>
                <td><%= idx+1 %></td>
                <td>
                  <div><strong><%= it.productName || it.name || 'Item' %></strong></div>
                  <% if (it.description) { %><div class="small-muted"><%= it.description %></div><% } %>
                </td>
                <td>$<%= Number(it.price).toFixed(2) %></td>
                <td><%= it.quantity %></td>
                <td>$<%= (Number(it.price) * Number(it.quantity)).toFixed(2) %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="5" class="text-center small-muted">No items found</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="d-flex justify-content-end">
      <div style="width:320px;">
        <div class="d-flex justify-content-between"><div class="small-muted">Subtotal</div><div>$<%= order && order.subtotal ? Number(order.subtotal).toFixed(2) : (order && order.total ? Number(order.total).toFixed(2) : '0.00') %></div></div>
        <% if (order && order.tax) { %>
          <div class="d-flex justify-content-between"><div class="small-muted">Tax</div><div>$<%= Number(order.tax).toFixed(2) %></div></div>
        <% } %>
        <% if (order && order.shipping) { %>
          <div class="d-flex justify-content-between"><div class="small-muted">Shipping</div><div>$<%= Number(order.shipping).toFixed(2) %></div></div>
        <% } %>
        <hr>
        <div class="d-flex justify-content-between"><div><strong>Total</strong></div><div><strong>$<%= order && order.total ? Number(order.total).toFixed(2) : '0.00' %></strong></div></div>
      </div>
    </div>

    <div class="mt-4 d-flex justify-content-between align-items-center no-print">
      <div class="small-muted">Paid by: <strong><%= order && order.paymentMethod ? order.paymentMethod : (order && order.payment ? order.payment : 'N/A') %></strong></div>
      <div>
        <a href="/orders" class="btn btn-outline-secondary">Back to Orders</a>
        <button class="btn btn-primary print-btn" onclick="window.print()">Print Invoice</button>
      </div>
    </div>

    <div class="mt-3 small-muted">
      Refunds are available within 3 days of receiving your product.
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
